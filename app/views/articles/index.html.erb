<h1 align="center">View the latest articles over here</h1>

<% @articles.each do |a| %>

<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="article-title">
       <%= link_to a.title, article_path(a)%>
      </div> 
      <div class="article-body">
      <%= truncate(a.description, length: 80)%>
      </div>
      <div class="article-actions">

           <%= link_to 'Edit this article', edit_article_path(a), class: "btn btn-xs btn-primary" %>
           <%= link_to 'Delete', article_path(a), method: :delete,
                                      data: {confirm: "Are you like really sure?"},
                                      class: "btn btn-xs btn-danger" %>
        
      </div>
    </div>
  </div>
</div>
        <% end %> 
