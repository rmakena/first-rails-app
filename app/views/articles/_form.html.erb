<div class="row">
  <div class="col-xs-12">
      <%= form_for(@article, :html => {class:"form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
        <div class="control-label col-sm-2">
        <%= f.label :title%>
        </div>
        <div class="col-sm-7">
        <%= f.text_field :title, class:"form-control", placeholder: "Title of the article", autofocus: true%>
        </div>
        </div>
         <div class="form-group">
        <div class="control-label col-sm-2">
          <%=f.label :description %>
          </div>
        <div class="col-sm-7">
          <%=f.text_area :description, rows:10, class: "form-control", placeholder: "Article description" %>
        </div>
        </div>

        <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <%=f.submit class: "btn btn-default btn-lg" %>
          </div>
        </div>
      <%end%>

        <div class="col-xs-4 col-xs-offset-8">
        [ <%= link_to 'Cancel', articles_path %> ]
        </div>
  </div>
</div>